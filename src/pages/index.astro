<meta charset="UTF-8" />

<style>
  :root {
    --bg: #0a0a0f;
    --card: #12121a;
    --accent: #7c3aed;
    --accent2: #06b6d4;
    --text: #e5e7eb;
    --text-soft: #9ca3af;
  }

  body {
    background: linear-gradient(180deg, #0a0a0f 0%, #050508 100%);
    color: var(--text);
    font-family: system-ui, sans-serif;
  }

  .container {
    max-width: 1100px;
    margin: auto;
    padding: 2rem;
  }

  .hero {
    text-align: center;
    padding: 4rem 1rem;
  }

  .title {
    font-size: 3rem;
    font-weight: 800;
    background: linear-gradient(90deg, var(--accent), var(--accent2));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .subtitle {
    color: var(--text-soft);
    margin-top: 1rem;
    font-size: 1.2rem;
  }

  .card {
    background: var(--card);
    padding: 2rem;
    border-radius: 20px;
    box-shadow: 0 0 30px rgba(124,58,237,0.15);
    margin-top: 3rem;
  }

  .video {
    margin-top: 1.5rem;
    border-radius: 14px;
    overflow: hidden;
  }

  iframe {
    width: 100%;
    height: 400px;
    border: none;
  }

  .section-title {
    font-size: 1.6rem;
    font-weight: 700;
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 1.5rem;
    margin-top: 2rem;
  }

  .mini-card {
    background: #0f0f18;
    padding: 1.5rem;
    border-radius: 16px;
    border: 1px solid #1f1f2e;
    transition: 0.3s;
  }

  .mini-card:hover {
    transform: translateY(-6px);
    border-color: var(--accent);
  }

  footer {
    text-align: center;
    margin-top: 4rem;
    color: var(--text-soft);
  }
</style>

<div class="container">
  
  <section class="hero">
